<UserControl x:Class="Watics.UI.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Watics.UI"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="600">
    <Grid Margin="5" Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Image x:Name="Face" Grid.Column="0" Margin="0,25,0,25" Source="{Binding}"/>
        <StackPanel Grid.Column="1">
            <Label x:Name="Name" Content="이름" FontSize="15" FontWeight="Bold" Background="Black" Foreground="White"/>
            <TextBlock x:Name="Dialog" Background="White" Margin="5" Text="대화"/>
        </StackPanel>
    </Grid>
</UserControl>
